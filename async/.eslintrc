{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "no-console": 0,
    "quotes": [2, "single"],
    "no-unused-vars": [2, {
      "argsIgnorePattern": "^_"
    }],
    "jsx-quotes": 1,
    "jsx-a11y/no-onchange": 0,
    "react/prop-types": 0,
    "react/no-multi-comp": [1, {
      "ignoreStateless": true
    }],
    "react/jsx-indent": [2, 2],
    "react/jsx-indent-props": [2, 2],
    "react/jsx-sort-props": [1, {
      "callbacksLast": true
    }],
    "react-hooks/exhaustive-deps": [1, {
      "enableDangerousAutofixThisMayCauseInfiniteLoops": true
    }]
  }
}
