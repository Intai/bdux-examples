{
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/all"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "no-console": 0,
    "quotes": [2, "single"],
    "no-unused-vars": [2, {
      "argsIgnorePattern": "^_"
    }],
    "jsx-quotes": 1,
    "react/prop-types": 0,
    "react/jsx-indent": [1, 2],
    "react/jsx-indent-props": [1, 2],
    "react/jsx-handler-names": 0,
    "react/jsx-props-no-spreading": 0,
    "react/forbid-component-props": 0,
    "react/no-multi-comp": [2, {
      "ignoreStateless": true
    }],
    "react/jsx-filename-extension": [1, {
      "extensions": [".js", ".jsx"]
    }]
  }
}
